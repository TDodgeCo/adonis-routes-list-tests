{
    "extends": "adonis-preset-ts/tsconfig.json",
    "include": [
      "server/**/*",
      "resources/ts/**/*"
    ],
    "exclude": [
      "node_modules",
      "build"
    ],
    "compilerOptions": {
      "outDir": "build",
      "rootDir": "./",
      "sourceMap": true,
      "paths": {
        "App/*": [
          "./app/*"
        ],
        "Config/*": [
          "./config/*"
        ],
        "Contracts/*": [
          "./contracts/*"
        ],
        "Database/*": [
          "./database/*"
        ]
      },
      "types": [
        // add path to types files
      ]
    }
  }